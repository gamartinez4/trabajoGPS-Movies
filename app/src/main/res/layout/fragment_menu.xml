<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E9E9E9"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        style="@style/mis_servici"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Seleccione cualquiera de las opciones que desea conocer:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gps"
        android:layout_width="269dp"
        android:layout_height="150dp"
        android:background="@drawable/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.177" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/peliculas"
        android:layout_width="269dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gps_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_gps_fixed_24"
        app:layout_constraintBottom_toBottomOf="@+id/gps"
        app:layout_constraintEnd_toEndOf="@+id/gps"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/gps"
        app:layout_constraintTop_toTopOf="@+id/gps"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_movie_24"
        app:layout_constraintBottom_toBottomOf="@+id/peliculas"
        app:layout_constraintEnd_toEndOf="@+id/peliculas"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/peliculas"
        app:layout_constraintTop_toTopOf="@+id/peliculas"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/movie_text"
        style="@style/subtexto_solic"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Catalogo de peliculas"
        app:layout_constraintBottom_toBottomOf="@+id/peliculas"
        app:layout_constraintEnd_toEndOf="@+id/peliculas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/movie_icon"
        app:layout_constraintTop_toTopOf="@+id/peliculas" />

    <TextView
        android:id="@+id/gps_text"
        style="@style/subtexto_solic"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Servicio de localizaciÃ³n GPS"
        app:layout_constraintBottom_toBottomOf="@+id/gps"
        app:layout_constraintEnd_toEndOf="@+id/gps"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gps_icon"
        app:layout_constraintTop_toTopOf="@+id/gps" />


</androidx.constraintlayout.widget.ConstraintLayout>